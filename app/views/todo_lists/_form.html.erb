<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(todo_list.errors.count, "error") %> <%= I18n.t('views.todo_list.new.errors.title') %>
      </h2>

      <% todo_list.errors.each do |error| %>
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action list-group-item-danger"><%= error.full_message %></a>
        </div>
      <% end %>
        
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="submitButton">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>